#include<stdio.h>
//main function 
int main()
{
	//declaring the variables
	int i,j,m,n,a[10],b[10],c[20];
	//taking the inputs
	printf("\nEnter the number of elementsin a first array:");
	scanf("%d",&m);
	printf("\nEnter the elements of the 1st array:");
	for(i=0;i<n;i++)
	    scanf("%d",&a[i]);
	printf("\nEnter the number of elements of the 2nd array:");
	scanf("%d",&n);
	printf("\nEnter the elements of the 2nd array: ");
	for(i=0;i<n;i++)
	    scanf("%d",&b[i]);
	//merging the two arrays
	for(i=0;i<m;i++)
	    c[i]=a[i];
	j=i;
	for(i=0;i<n;i++,j++)
	    c[j]=b[i];
	//printing the merged array
	printf("The merged Array");
	for(i=0;i<m+n;i++)
	    printf("%d",c[i]);
return 0;
}
